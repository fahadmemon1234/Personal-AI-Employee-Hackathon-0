{
  "servers": {
    "email-mcp": {
      "name": "Email MCP Server",
      "description": "Manages email operations including sending, receiving, and processing",
      "port": 8080,
      "host": "localhost",
      "enabled": true,
      "capabilities": [
        "send-email",
        "receive-email",
        "process-email",
        "gmail-watch",
        "email-approval"
      ],
      "config": {
        "gmail_credentials": "./credentials.json",
        "token_file": "./token.pickle",
        "watch_interval": 300
      }
    },
    "browser-mcp": {
      "name": "Browser MCP Server",
      "description": "Manages web browsing, scraping, and automation tasks",
      "port": 8081,
      "host": "localhost",
      "enabled": true,
      "capabilities": [
        "browse-web",
        "scrape-content",
        "automate-browser",
        "social-media-post",
        "web-interaction"
      ],
      "config": {
        "browser_type": "chrome",
        "headless": true,
        "timeout": 30
      }
    },
    "odoo-mcp": {
      "name": "Odoo MCP Server",
      "description": "Manages accounting and ERP integration with Odoo",
      "port": 8082,
      "host": "localhost",
      "enabled": true,
      "capabilities": [
        "get-financial-records",
        "sync-invoices",
        "get-outstanding-invoices",
        "get-monthly-revenue",
        "create-draft-invoice"
      ],
      "config": {
        "odoo_url": "http://fahadmemon.odoo.com",
        "odoo_db": "FahadMemon",
        "watch_interval": 600
      }
    },
    "twitter-mcp": {
      "name": "Twitter (X) MCP Server",
      "description": "Manages Twitter posting and analytics",
      "port": 8083,
      "host": "localhost",
      "enabled": true,
      "capabilities": [
        "post-tweet",
        "post-thread",
        "get-user-metrics",
        "get-tweet-metrics",
        "generate-summary"
      ],
      "config": {
        "api_version": "v2",
        "rate_limit": 200,
        "rate_limit_period": "24h"
      }
    },
    "facebook-instagram-mcp": {
      "name": "Facebook/Instagram MCP Server",
      "description": "Manages Facebook and Instagram posting and analytics",
      "port": 8084,
      "host": "localhost",
      "enabled": true,
      "capabilities": [
        "post-facebook",
        "post-instagram",
        "get-facebook-insights",
        "get-instagram-insights",
        "generate-summary"
      ],
      "config": {
        "graph_api_version": "v18.0",
        "watch_interval": 300
      }
    }
  },
  "directories": {
    "inbox": "./Inbox",
    "needs_action": "./Needs_Action",
    "approved": "./Approved",
    "completed": "./Completed",
    "pending_approval": "./Pending_Approval",
    "social_media_summaries": "./Social_Media_Summaries",
    "briefings": "./Briefings",
    "bank_transactions": "./Bank_Transactions"
  },
  "workflow": {
    "enable_reasoning_loop": true,
    "approval_required": true,
    "auto_process_unread_emails": true
  }
}